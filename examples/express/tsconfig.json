{
  "compilerOptions": {
    "module": "NodeNext",
    "experimentalDecorators": true,
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "dist",
    "target": "ESNext",
    "strictNullChecks": true,
    "plugins": [{ "name": "@autometrics/typescript-plugin" }]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.spec.ts"]
}
