{
  "private": true,
  "name": "autometrics-monorepo",
  "packageManager": "yarn@3.5.0",
  "workspaces": [
    "packages/autometrics",
    "packages/exporter-otlp-http",
    "packages/exporter-prometheus",
    "packages/exporter-prometheus-push-gateway",
    "packages/on-demand-metric-reader",
    "packages/parcel-transformer-autometrics",
    "packages/typescript-plugin"
  ],
  "scripts": {
    "build:main": "yarn build --workspace=autometrics",
    "dev:main": "yarn dev --workspace=autometrics",
    "clean:main": "yarn clean --workspace=autometrics",
    "build:lib": "yarn build --workspace=@autometrics/autometrics",
    "dev:lib": "yarn dev --workspace=@autometrics/autometrics",
    "clean:lib": "yarn clean --workspace=@autometrics/autometrics",
    "build:typescript-plugin": "yarn build --workspace=@autometrics/typescript-plugin",
    "dev:typescript-plugin": "yarn dev --workspace=@autometrics/typescript-plugin",
    "clean:typescript-plugin": "yarn clean --workspace=@autometrics/typescript-plugin",
    "build:parcel-plugin": "yarn build --workspace=@autometrics/parcel-transformer-autometrics",
    "dev:parcel-plugin": "yarn dev --workspace=@autometrics/parcel-transformer-autometrics",
    "clean:parcel-plugin": "yarn clean --workspace=@autometrics/parcel-transformer-autometrics",
    "build": "yarn workspaces foreach -pt run build",
    "lint": "rome ci packages/**/src",
    "test": "vitest",
    "type-check": "yarn workspaces foreach -p run type-check"
  },
  "devDependencies": {
    "@parcel/profiler": "^2.9.0",
    "@parcel/types": "^2.9.0",
    "documentation": "^14.0.2",
    "rome": "^12.0.0",
    "tsup": "^7.2.0",
    "typescript": "^5.0.4",
    "vitest": "^0.30.1"
  }
}
